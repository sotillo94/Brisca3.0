<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/background">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/partida_jugador1"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_weight="33">

        <GridLayout
            android:layout_width="125dp"
            android:layout_height="151dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:layout_gravity="center"
                android:contentDescription="@string/partida_carta1j1"
                android:background="@drawable/v0" />
        </GridLayout>

        <GridLayout
            android:layout_width="125dp"
            android:layout_height="151dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:layout_gravity="center"
                android:contentDescription="@string/partida_carta2j1"
                android:background="@drawable/v0" />
        </GridLayout>

        <GridLayout
            android:layout_width="125dp"
            android:layout_height="151dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:layout_gravity="center"
                android:contentDescription="@string/partida_carta3j1"
                android:background="@drawable/v0" />
        </GridLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_weight="33" >

        <GridLayout
            android:layout_width="125dp"
            android:layout_height="151dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton7"
                android:layout_gravity="center"
                android:contentDescription="@string/partida_carta3j1"
                android:background="@drawable/v1" />
        </GridLayout>

        <GridLayout
            android:layout_width="125dp"
            android:layout_height="151dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageButton8"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/partida_carta1j2"
                android:background="@drawable/b1" />
        </GridLayout>

        <GridLayout
            android:layout_width="125dp"
            android:layout_height="151dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton9"
                android:layout_gravity="center"
                android:contentDescription="@string/partida_carta1j1"
                android:background="@drawable/v0" />
        </GridLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="33">

        <GridLayout
            android:layout_width="125dp"
            android:layout_height="151dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/partida_carta1j2"
                android:background="@drawable/b1" />
        </GridLayout>

        <GridLayout
            android:layout_width="125dp"
            android:layout_height="151dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/partida_carta2j2"
                android:background="@drawable/o1" />
        </GridLayout>

        <GridLayout
            android:layout_width="125dp"
            android:layout_height="151dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/partida_carta3j2"
                android:background="@drawable/o12" />
        </GridLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/partida_jugador2"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/partida_mensajes"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal" />
    </GridLayout>

</GridLayout>